<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Views.CreateNotePage"
             Title="Criar Nota">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Criar Nota" />
            <Editor Text="{Binding NewNote.Title, Mode=TwoWay}" Placeholder="Title"/>
            <Editor Text="{Binding NewNote.Description, Mode=TwoWay}" Placeholder="Description"/>
            <Button Text="Salvar" Command="{Binding SaveNewNoteCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>