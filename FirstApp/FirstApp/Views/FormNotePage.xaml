<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Views.FormNotePage"
             Title="Criar Nota">
    <ContentPage.Content>
        <StackLayout Margin="10,0,10,0">
            <Label Text="Criar Nota" FontSize="Title" Margin="5,10,0,5"/>
            <Editor Text="{Binding NewNote.Title, Mode=TwoWay}" Placeholder="Title" Margin="5"/>
            <Editor Text="{Binding NewNote.Description, Mode=TwoWay}" Placeholder="Description" Margin="5"/>
            <Button 
                Text="Salvar" 
                Command="{Binding SaveNewNoteCommand}" 
                Margin="0,35,0,5" 
                CornerRadius="20" 
                HorizontalOptions="Fill"
                VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>